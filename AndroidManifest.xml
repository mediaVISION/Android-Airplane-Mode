    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="13" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

